pipeline {
    
    agent any
    
    tools {
        nodejs('NodeJS-15.6.0')
    }
    
    stages {
        stage('Build') {
            steps {
                    sh 'npm install'
                    sh 'npm install -g @angular/cli'
            }
        }
        stage('Test') {
            steps {
              
                sh 'cd /var/jenkins_home/workspace/restaurantpipe/restaurantapp'
              
                sh 'ls -al'
              
                sh 'cd /var/jenkins_home/workspace/restaurantpipe@tmp'
              
                sh 'ls -al'
                
              
                sh 'ng serve --open'
            }
        }

    }
}
